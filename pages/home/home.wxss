/* 头部 */
.top_content {
  box-shadow: 0rpx 10rpx 80rpx 0rpx rgba(68, 68, 68, 0.15);
  padding-bottom: 14rpx;
  position:fixed;
  top:0;
  left:0;
  width:100%;
  z-index:99;
  height:250rpx;
  background:#fff;
}
.top_content .user_data {
  overflow: hidden;
}
.top_content .user_data .ft_userinfo {
  float: left;
  margin-left: 40rpx;
  overflow: hidden;
  margin-top: 40rpx;
}

.top_content .user_data .ft_userinfo .user_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  /* margin-top: 8rpx; */
}
.top_content .user_data .ft_userinfo .user_foti .user_name {
  color:#444444;
  /* width:70rpx; */
  height:auto;
  overflow: hidden;
  display:block;
  /* border-radius:50%; */
}

.top_content .user_data .ft_userinfo .user_img image {
  width: 100%;
  height: 100%;
}
.top_content .user_data .ft_userinfo .user_foti {
  float: left;
  margin-left: 36rpx;
  height:auto;
  overflow: hidden;
}
.top_content .user_data .ft_userinfo .user_foti .user_name{
  font-size: 34rpx;
	color: #444444;
}
.top_content .user_data .ft_userinfo .user_foti .user_section{
  font-size: 24rpx;
	color: #bbb;
  margin-top: 10rpx;
}
.top_content .user_data .rt_ico {
  float: right;
  overflow: hidden;
}
.top_content .user_data .rt_ico .order {
  width: 50rpx;
  height: 50rpx;
  margin-top: 60rpx;
  float: left;
  margin-right: 60rpx;
  position: relative;
}
.top_content .user_data .rt_ico .order::after {
  content: "";
  position: absolute;
  width: 24rpx;
	height: 24rpx;
	background-color: #ff6204;
  box-sizing: border-box;
	border: solid 4rpx #ffffff;
  border-radius: 50%;
  right: -6rpx;
  top: -6rpx;
}
.top_content .user_data .rt_ico .order image {
  width: 50rpx;
  height: 50rpx;
}
.top_content .user_data .rt_ico .code {
  float: left;
  width: 110rpx;
	height: 140rpx;
	background-color: #35bdb6;
	border-radius: 40rpx 0rpx 0rpx 40rpx;
  margin-top: 16rpx;
}
.top_content .user_data .rt_ico .code image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 24rpx;
  margin-top: 45rpx;
}
.affiche {
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  overflow: hidden;
}
.affiche .afficheico {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
}
.affiche .afficheico image {
  width: 50rpx;
  height: 50rpx;
}
.affiche .affichetext {
  font-size: 24rpx;
	color: #35bdb6;
  line-height: 50rpx;
  max-width: 550rpx;
  text-overflow: ellipsis;
	white-space: nowrap;
	overflow:hidden;
}

/* 菜单左 */
.tabBorer{
