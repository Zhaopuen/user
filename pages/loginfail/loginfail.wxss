/* pages/login/login.wxss */
.login_box{
  width:100%;
  height:100%;
  position: fixed;
  background: #35bdb6;
}
.login_mid{
  width:84%;
  height:100%;
  margin:5% 8%;
  text-align: center;
}
.login_mid image{
  width:230rpx;
  height:250rpx;
  margin: 7% auto;
}
.login_mid text{
  display: block;
  text-align: center;
  color:#fff;
  font-size: 48rpx;
}
.login_fail{
  margin-top: 40rpx;
}
.login_mid .loginBtn{
  color:#fff;
  font-size: 32rpx;
  position: fixed;
  bottom:150rpx;
  text-align: center;
  width:84%;
}