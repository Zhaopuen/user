/* pages/mine/mine.wxss */
.mine_box{
  width:100%;
  height:auto;
  overflow: hidden;
}
.view_top{
  width:100%;
  height:400rpx;
  background:#35bdb6;
  text-align: center;
  margin: 0 auto;
  padding-top: 5%;
  position: relative;
}
/* .user_name{
  width:100%;
  height:100%;
  border-radius:50%;
} */
.view_top .user_img{
  width:140rpx;
  height:140rpx;
  overflow: hidden;
  /* padding-top:10%; */
  margin-bottom:30rpx;
  text-align:center;
  margin:0 auto;
  border-radius:50%;
}
.user_img image {
  width: 100%;
  height: 100%;
}
.view_top .view_name{
  display: block;
  text-align: center;
  color:#fff;
  font-size: 34rpx;
  margin-top: 30rpx;
}
.view_money{
  background-color: #ffffff;
	box-shadow: 0px 10px 60px 0px 
		rgba(68, 68, 68, 0.1);
  width:75%;
  height:220rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 220rpx;
  position: absolute;
  bottom:-80rpx;
  left:0;
  right:0;
  margin:auto;
  z-index:99999;
}
.view_money .view_moneynum{
  color:#444;
  font-size: 80rpx;
}

.view_bottom{
  width:90%;
  height:auto;
  overflow: hidden;
  margin:180rpx 5% 0;
}
.view_job{
  height: auto;
  overflow: hidden;
  width:100%;
  border-bottom:1px solid #f0f0f0;
  padding:4% 0 4%;
}
.view_job image{
  width:50rpx;
  height:50rpx;
  display: block;
  float:left;
}
.view_job text{
  color:#666;
  font-size: 30rpx;
  margin-left: 15rpx;
  display: block;
  float:left;
  line-height: 50rpx;
}
.view_job span{
  display: block;
  float:right;
  color:#999;
  font-size: 30rpx;
}
